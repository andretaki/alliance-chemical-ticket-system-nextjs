# =============================================================================
# Alliance Chemical Ticket System - Environment Variables
# =============================================================================
# Copy this file to .env and fill in your values

# -----------------------------------------------------------------------------
# Database (Required)
# -----------------------------------------------------------------------------
DATABASE_URL="postgresql://user:password@localhost:5432/alliance_tickets"

# -----------------------------------------------------------------------------
# Authentication (Required)
# -----------------------------------------------------------------------------
BETTER_AUTH_SECRET="your-secret-at-least-32-characters-long-for-security-purposes"
BETTER_AUTH_URL="http://localhost:3001"

# -----------------------------------------------------------------------------
# Microsoft Graph (Email Processing)
# -----------------------------------------------------------------------------
MICROSOFT_CLIENT_ID="your-azure-app-client-id"
MICROSOFT_CLIENT_SECRET="your-azure-app-client-secret"
MICROSOFT_TENANT_ID="your-azure-tenant-id"

# -----------------------------------------------------------------------------
# AI Services (Optional - for AI features)
# -----------------------------------------------------------------------------
OPENAI_API_KEY="sk-..."
GOOGLE_API_KEY="AIza..."
GROQ_API_KEY="gsk_..."

# -----------------------------------------------------------------------------
# Shopify Integration (Optional)
# -----------------------------------------------------------------------------
SHOPIFY_STORE_URL="https://your-store.myshopify.com"
SHOPIFY_ADMIN_ACCESS_TOKEN="shpat_..."

# -----------------------------------------------------------------------------
# QuickBooks Integration (Optional)
# -----------------------------------------------------------------------------
QBO_CLIENT_ID="your-qbo-client-id"
QBO_CLIENT_SECRET="your-qbo-client-secret"
QBO_REDIRECT_URI="http://localhost:3001/api/qbo/auth/callback"
QBO_ENVIRONMENT="sandbox" # or "production"

# -----------------------------------------------------------------------------
# Email Service (Optional - for outbound emails)
# -----------------------------------------------------------------------------
RESEND_API_KEY="re_..."

# -----------------------------------------------------------------------------
# Vercel Infrastructure (Production)
# -----------------------------------------------------------------------------
KV_REST_API_URL="https://..."
KV_REST_API_TOKEN="..."
BLOB_READ_WRITE_TOKEN="vercel_blob_rw_..."

# -----------------------------------------------------------------------------
# Application Config
# -----------------------------------------------------------------------------
NODE_ENV="development"
NEXT_PUBLIC_APP_URL="http://localhost:3001"

# -----------------------------------------------------------------------------
# ShipStation Integration (Optional)
# -----------------------------------------------------------------------------
SHIPSTATION_API_KEY="..."
SHIPSTATION_API_SECRET="..."
